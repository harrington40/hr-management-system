# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database
DATABASE_URL=postgresql://hrms_user:hrms_password@prod-db:5432/hrms_production

# Redis
REDIS_URL=redis://prod-redis:6379

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
GRPC_PORT=50051

# Security
SECRET_KEY=${PRODUCTION_SECRET_KEY}
JWT_SECRET_KEY=${PRODUCTION_JWT_SECRET_KEY}

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}

# External Services
PRODUCTION_URL=https://hrms-app.com

# Monitoring
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY_PRODUCTION}

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/hrms-app.crt
SSL_KEY_PATH=/etc/ssl/private/hrms-app.key

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30