# HRMS OrientDB Configuration
# Copy this file to .env and update with your actual OrientDB credentials

# OrientDB Connection Settings (Binary Protocol - Port 2424)
ORIENTDB_HOST=orientdb.transtechologies.com
ORIENTDB_PORT=2424
ORIENTDB_USER=your_username
ORIENTDB_PASSWORD=your_password
ORIENTDB_DATABASE=yourdb

# Connection Pool Settings
ORIENTDB_POOL_SIZE=5
ORIENTDB_CONNECT_TIMEOUT=10

# Database Initialization Settings
DB_RESET_ON_STARTUP=false
DB_LOAD_SAMPLE_DATA=true

# Logging Settings
DB_LOG_LEVEL=INFO
DB_LOG_QUERIES=false